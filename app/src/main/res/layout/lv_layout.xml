<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/lv_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@drawable/pic"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/lv_qqname"
            app:layout_constraintTop_toTopOf="@id/lv_pic"
            app:layout_constraintLeft_toRightOf="@id/lv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="胡翔"
            android:layout_marginLeft="15dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/lv_message"
            app:layout_constraintBottom_toBottomOf="@id/lv_pic"
            app:layout_constraintLeft_toRightOf="@id/lv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello "
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/lv_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lv_pic"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="星期三"
            android:textSize="12dp"
            android:layout_marginTop="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
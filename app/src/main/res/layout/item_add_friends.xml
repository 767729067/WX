<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/request_friends_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/request_friends_name"
        app:layout_constraintTop_toTopOf="@id/request_friends_icon"
        app:layout_constraintLeft_toRightOf="@id/request_friends_icon"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        tools:text="胡翔" />
    <TextView
        app:layout_constraintTop_toTopOf="@id/request_friends_icon"
        app:layout_constraintLeft_toRightOf="@id/request_friends_name"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求加你为好友" />
    <TextView
        android:id="@+id/request_friends_userName"
        app:layout_constraintBottom_toBottomOf="@id/request_friends_icon"
        app:layout_constraintLeft_toLeftOf="@id/request_friends_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(135555)"
        />
    <Button
        android:id="@+id/request_friends_btAgree"
        app:layout_constraintTop_toTopOf="@id/request_friends_icon"
        app:layout_constraintBottom_toBottomOf="@id/request_friends_icon"
        app:layout_constraintRight_toLeftOf="@id/request_friends_btRefuse"
        android:layout_marginRight="5dp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="同意"
        android:background="@drawable/agree_bt_bg"
        android:padding="0dp"/>
    <Button
        android:id="@+id/request_friends_btRefuse"
        app:layout_constraintTop_toTopOf="@id/request_friends_icon"
        app:layout_constraintBottom_toBottomOf="@id/request_friends_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="拒绝"
        android:background="@drawable/refuse_bt_request_bg"
        android:padding="0dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
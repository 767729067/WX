<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/icon_dynamic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/name_dynamic"
        app:layout_constraintTop_toTopOf="@id/icon_dynamic"
        app:layout_constraintLeft_toRightOf="@id/icon_dynamic"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="胡翔"
        android:textSize="16sp"
        android:textColor="#0093AA"
        />
    <TextView
        android:id="@+id/id_dynamic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/item_count_dynamic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/content_dynamic"
        app:layout_constraintTop_toBottomOf="@id/name_dynamic"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/name_dynamic"
        android:layout_marginBottom="5dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text=""
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_dynamic"
        app:layout_constraintTop_toBottomOf="@id/content_dynamic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/like_dynamic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dianzan1"/>
        <TextView
            android:id="@+id/numLike_dynamic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/like_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20"/>
        <ImageView
            android:id="@+id/write_dynamic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/numWrite_dynamic"
            app:layout_constraintLeft_toRightOf="@id/numLike_dynamic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pinglun1"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/numWrite_dynamic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/comment_dynamic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/nightriver">
<!--        logo-->
        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HX"
            android:textSize="60dp"
            android:textColor="#99FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"/>
<!--        登陆账号布局-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loginUsernameOrPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/usernameandpassword_bg"
            >
<!--登陆账号-->
            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#FFF"
                android:hint="请输入您的账号"
                android:textSize="12dp"
                android:textColorHint="#B3B2B2"
                android:background="@null"
                android:textCursorDrawable="@drawable/edittext_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
<!--        登陆密码布局-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginUsernameOrPassword"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/usernameandpassword_bg"
            >
<!--登陆密码 -->
           <EditText
                android:id="@+id/passWord"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColorHint="#B3B2B2"
                android:textColor="#FFF"
                android:hint="请输入您的密码"
                android:background="@null"
                android:textSize="12dp"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:padding="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
<!--        登陆按钮-->
        <Button
            android:id="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@id/loginPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:layout_margin="40dp"
            android:textColor="#99FFFFFF"
            android:background="@drawable/button_bg"/>
<!--        记住忘记密码布局-->
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            android:id="@+id/rememberOrForget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">
<!--            记住密码自定义复选框-->
            <CheckBox
                android:id="@+id/cb_remember"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99FFFFFF"
                android:text="记住密码"
                android:textSize="12dp"
                android:button="@null"
                android:drawableLeft="@drawable/select_checkbox"
                android:drawablePadding="10dp"
                android:alpha="0.9"
                android:background="@null"
                />
<!--            忘记密码按钮-->
            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="忘记密码？"
                android:textSize="12dp"
                android:textColor="#99FFFFFF"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
<!--微信 QQ 手机号码登陆布局-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otherLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp">
<!--            qq登陆-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cl_weChat"
                android:background="@drawable/cl_click">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/qq"
                    android:alpha="0.8"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            微信登陆-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_weChat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cl_qq"
                app:layout_constraintRight_toLeftOf="@id/cl_phoneNumber"
                android:background="@drawable/cl_click">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/weixin"
                    android:alpha="0.8"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            电话号码登陆-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_phoneNumber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cl_weChat"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/cl_click">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/phonenumber"
                    android:alpha="0.8"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>